#!/usr/bin/env bash

[[ $# -ne 0 ]] && echo "Usage: $0" && exit 1
[[ -n "$(git status --porcelain)" ]] && echo "Working directory is not clean" && exit 1

COMPOSER="$(which php) -dmemory_limit=-1 $(which composer)"

rm -rf var/cache var/log && \
$COMPOSER update && \
$COMPOSER symfony:sync-recipes --force && \
mv .env .env.dist
