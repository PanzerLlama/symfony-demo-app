#!/usr/bin/env bash

if [[ -n "$(git status --porcelain)" ]]; then
    echo "Working directory is not clean."
    exit 1
fi

COMPOSER="$(which php) -dmemory_limit=-1 $(which composer)"

rm -rf var/cache var/log && \
$COMPOSER update && \
$COMPOSER symfony:sync-recipes --force && \
mv .env .env.dist
